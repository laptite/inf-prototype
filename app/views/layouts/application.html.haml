!!!
%html
	%head
		%title Prototype
		= csrf_meta_tags
		= csp_meta_tag
		= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
		= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
		= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Archivo+Black&display=swap'

	%body{ class: body_klass }
		- flash.each do |name, msg|
			- klass = name == 'notice' ? 'alert-success' : 'alert-info'
			= content_tag :div, msg, class: "alert #{klass}"
		
		%header= render partial: 'layouts/menu'
		.page= yield
		%footer= render partial: 'layouts/footer'
